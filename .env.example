# Magic Mirror Configuration - Copy to .env and fill in your values

# TFL Stop Configuration
TFL_STOP_ID_1=your_primary_stop_id_here
TFL_SUMMARY_IGNORE_DESTINATION="destination_to_ignore_in_summary"
TFL_STOP_ID_2=your_second_stop_id_here
TFL_STOP_ID_3=your_third_stop_id_here
TFL_LINE_STATUS="victoria,central"  # Optional: Comma-separated list of lines to show status for

# TFL Transfer Station Configuration
TFL_TRANSFER_STATION_ID=your_transfer_station_id_here

# Google Calendar Configuration
GOOGLE_CALENDAR_ID_1="your_first_calendar@gmail.com"
GOOGLE_CALENDAR_ID_2="your_second_calendar@gmail.com"

# Weather Configuration
WEATHER_API_KEY="your_weather_api_key_here"
WEATHER_POSTCODE="your_postcode_here"
